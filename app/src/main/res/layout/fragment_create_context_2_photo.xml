<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvContextImageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagem do contexto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContextImageName">
<!--
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenCam"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/reference_photo_add"
            android:text="Câmera"
            app:backgroundTint="@color/colorAccent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ou " />
-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImageWeb"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="Web"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/ic_research" />

        <TextView
            android:id="@+id/context_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ou " />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImageUrl"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="URL"
            app:icon="@drawable/ic_url_xhdpi"
            app:backgroundTint="@color/colorAccent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/context_image_view"
        android:layout_width="190dp"
        android:layout_height="222dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout_shadow_withe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
